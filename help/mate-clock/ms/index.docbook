<!-- ============= Introduction ============================== -->

  <sect1 id="clock-introduction">
	 <title>Pengenalan</title>

<!-- ==== Figure ============================================= -->
	 <figure id="clock-fig">
		<title>Aplet Jam</title>
		<screenshot>
		  <mediaobject><imageobject><imagedata fileref="figures/clock_applet.png" format="PNG"/> </imageobject> <textobject> <phrase>Menunjukkan aplet Jam.</phrase> </textobject></mediaobject>
		</screenshot>
